@model IEnumerable<MVCDepartment.Models.Schedule>

@{
    ViewBag.Title = "Расчасовки";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Создать новую", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Term)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discipline.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classroom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(item.Term % 2 == 0 ? "Летний" : "Зимний")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discipline.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classroom)
        </td>
        <td>
            @Html.ActionLink("Посмотреть", "Edit", new { id=item.Id }) |
            <!--@Html.ActionLink("Details", "Details", new { id=item.Id }) |-->
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
