@model IEnumerable<MVCDepartment.Models.Schedule>

@{
    ViewBag.Title = "Schedules";
}

<h2>Schedules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Term)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LecturesSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LabsSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PracticesSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExamWorksSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classroom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Where(x => x.Term == ViewBag.Term)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Term)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LecturesSum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LabsSum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PracticesSum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExamWorksSum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classroom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
